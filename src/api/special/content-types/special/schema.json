{
  "kind": "collectionType",
  "collectionName": "special_newses",
  "info": {
    "singularName": "special",
    "pluralName": "special-newses",
    "displayName": "specialNewses",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "text",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "description": {
      "type": "text",
      "required": true
    },
    "Tags": {
      "type": "component",
      "repeatable": false,
      "component": "tags.tags",
      "required": true
    },
    "PageColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "descriptionTitle": {
      "type": "text",
      "required": true
    },
    "views": {
      "type": "integer"
    },
    "hot": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "contibuter": {
      "type": "string",
      "required": true
    }
  }
}
