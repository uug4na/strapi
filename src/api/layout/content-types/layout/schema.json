{
  "kind": "collectionType",
  "collectionName": "layouts",
  "info": {
    "singularName": "layout",
    "pluralName": "layouts",
    "displayName": "Newses With Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Tags": {
      "type": "component",
      "repeatable": true,
      "component": "tags.tags",
      "required": true
    },
    "news": {
      "type": "dynamiczone",
      "components": [
        "ckeditor.ckeditor",
        "product.prices",
        "product.product",
        "news.youtube",
        "news.image",
        "news.image-description"
      ],
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isCarousel": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "views": {
      "type": "integer"
    },
    "hot": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "readMinute": {
      "type": "integer",
      "required": true
    },
    "contibuter": {
      "type": "string",
      "required": true
    }
  }
}
