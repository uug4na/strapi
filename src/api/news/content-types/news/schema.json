{
  "kind": "collectionType",
  "collectionName": "newses",
  "info": {
    "singularName": "news",
    "pluralName": "newses",
    "displayName": "simpleNewses",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "datetime"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "Tags": {
      "type": "component",
      "repeatable": true,
      "component": "tags.tags"
    },
    "isCarousel": {
      "type": "boolean",
      "default": false
    },
    "views": {
      "type": "integer"
    },
    "hot": {
      "type": "boolean",
      "default": false
    },
    "contents": {
      "type": "dynamiczone",
      "components": [
        "news.ckeditor",
        "news.youtube",
        "news.image"
      ]
    },
    "readMinute": {
      "type": "integer"
    }
  }
}
