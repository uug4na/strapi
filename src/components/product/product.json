{
  "collectionName": "components_product_products",
  "info": {
    "displayName": "product",
    "icon": "archive",
    "description": ""
  },
  "options": {},
  "attributes": {
    "productimage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "productbuyinfo": {
      "type": "component",
      "repeatable": true,
      "component": "product.prices"
    },
    "titleOfProduct": {
      "type": "text"
    },
    "descriptionOfProduct": {
      "type": "text"
    },
    "productPrice": {
      "type": "string"
    },
    "productPriceColor": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
